# How to define and call the function in python
# Arthematic operations using functions
def add(a,b):
    return(a+b)
def sub(a,b):
    return(a-b)
def mul(a,b):
    return(a*b)
def div(a,b):
    return(a/b)
# call the functions one by one
while True:
    a=int(input("Enter the first number: "))
    b=int(input("Enter the second number: "))
    print("""
    ***********Choice************
    ***** Select one of them ****
    Enter add to add the numbers:
    Enter sub to subtract numbers:
    Enter mul to multiply the numbers:
    Enter div to divide the numbers:
    """)
    c=input(">").lower()
    print(f"You have choosed {c}")
    if c=="add":
        print(f"This is add of {a} and {b}:")
        print(add(a,b))
    elif c=="sub":
        print(f"This is sub of {a} and {b}: ")
        print(sub(a,b))
    elif c=="mul":
        print(f"This is Mul of {a} and {b}:")
        print(mul(a,b))
    elif c=="div":
        print(f"This is div of {a} and {b}:")
        print(div(a,b))
    else:
        print("invalid input!")
        break
